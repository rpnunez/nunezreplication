{
  "mode": "master-slave",
  "syncInterval": "*/5 * * * *",
  "port": 3000,
  "databases": {
    "master": {
      "host": "localhost",
      "port": 3306,
      "user": "root",
      "password": "password",
      "database": "master_db"
    },
    "slave": {
      "host": "localhost",
      "port": 3307,
      "user": "root",
      "password": "password",
      "database": "slave_db"
    }
  },
  "replication": {
    "tables": [
      {
        "name": "users",
        "ignoreColumns": ["password_hash", "internal_notes"],
        "primaryKey": "id"
      },
      {
        "name": "products",
        "ignoreColumns": [],
        "primaryKey": "id"
      }
    ]
  }
}
